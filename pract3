#include <stdio.h>
#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    int a,num;
    num=0;
    cout<<"Conjetura de Collatz\n";
    cout<<"Ingrese un nÃºmero: \n";
    cin>> a;
    if ( a%2!=0) {
        while (a!=1){
            if(a%2!=0){
                a= (a*3)+1;
            }
            else{
                a=a/2;
            }
           
            ++num;
        }
        cout<<a;
        cout<<"Iteraciones: "<< num;
        }
        
    else {
        while (a!=1){
             if(a%2!=0){
                a= (a*3)+1;
            }
            else{
                a=a/2;
            }
           
            ++num;
        }
        cout<<a;
        cout<<"Iteraciones: "<< num;

    }
        
    return 0;
}
